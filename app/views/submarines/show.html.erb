<div class="container mt-4">
  <div class="row">
    <!-- Image -->
<div class="col-md-6">
  <img src="https://via.placeholder.com/1200x800" class="img-fluid" alt="<%= @submarine.name %> Image">
</div>

    <!-- Booking Form -->
    <div class="col-md-6">
      <h4>Booking Form</h4>
      <form action="#" method="post">
        <div class="form-group">
          <label for="bookingDate">Booking Date</label>
          <input type="date" class="form-control" id="bookingDate" name="date">
        </div>
        <div class="form-group mt-2">
          <button type="submit" class="btn btn-primary">Book Now</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Description -->
  <div class="row mt-4">
    <div class="col-md-12">
      <p><%= @submarine.description %></p>
    </div>
  </div>

  <!-- Details -->
  <div class="row mt-4">
    <div class="col-md-12">
      <h3>Quick Details</h3>
      <ul>
        <li><strong>ID:</strong> <%= @submarine.id %></li>
        <li><strong>Model:</strong> <%= @submarine.submarine_class %></li>
        <li><strong>Capacity:</strong> <%= @submarine.weight_ton %> tons</li>
        <li><strong>Price:</strong> $<%= @submarine.price %></li>
      </ul>
    </div>
  </div>
</div>
